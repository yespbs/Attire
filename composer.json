    "type": "codeigniter-library",
     "keywords": [
        "twig",
        "pipeline",
        "sprockets",
        "codeigniter-twig",
        "codeigniter",
        "codeigniter-sprockets",
        "codeigniter-pipeline",
        "codeigniter-theme",
        "codeigniter-template",
        "codeigniter-attire",
        "template-engine",
        "asset-management",
        "asset-pipeline",
        "attire"
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.2.4",
        "composer/installers": "*",
        "twig/twig": "^1.18",
        "vendethiel/sprockets-php": "dev-master"
    }, 
    "homepage": "https://github.com/davidsosavaldes/Attire",
    "authors": [
        {
            "name": "David Sosa Valdes",
            "email": "david.sosa.valdes@gmail.com"
        }
    ],
    "support":{
        "issues": "https://github.com/davidsosavaldes/Attire/issues",
        "wiki": "http://davidsosavaldes.github.io/Attire",
        "email": "david.sosa.valdes@gmail.com"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "installer-name": "attire"
    },
